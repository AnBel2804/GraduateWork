@model Route
@{
    ViewData["Title"] = "Update Route";
}

<div class="form-block-location">
    <div></div>
    <form asp-action="Update" method="post" style="width:400px">
        <div class="card border-light mb-3 border p-3 mt-4">
            <div class="row pb-2 text-center">
                <h2 class="text-black text-primary">Редагування маршруту</h2>
            </div>
            <hr style="color:whitesmoke" />
            <input asp-for="RouteId" hidden />
            <input asp-for="Departments" hidden />
            <div class="mb-3" style="width:350px">
                <label asp-for="Cost"></label>
                <input asp-for="Cost" class="form-control " />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="mb-3" style="width:350px">
                <label asp-for="Time"></label>
                <input asp-for="Time" class="form-control bg-light" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group form-block-buttons-location">
                <a class="btn  btn-outline-secondary" style="width:90%" asp-controller="Route" asp-action="Index">Назад</a>
                <button type="submit" class="btn btn-primary" style="width:95%; text-align:center;">Зберегти зміни</button>
            </div>
        </div>
    </form>
</div>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }