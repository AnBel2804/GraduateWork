@model Department
@{
    ViewData["Title"] = "Update";
}

<div class="form-block-location">
    <div></div>
    <form asp-action="Update" method="post" style="width:400px">
        <div class="card border-light mb-3 border p-3 mt-4">
            <div class="row pb-2 text-center">
                <h2 class="text-black text-primary">Редагування відділення</h2>
            </div>
            <hr style="color:whitesmoke" />
            <input asp-for="DepartmentId" hidden />
            <div class="mb-3" style="width:350px">
                <label asp-for="NumberOfDepartment"></label>
                <input asp-for="NumberOfDepartment" class="form-control " />
                <span asp-validation-for="NumberOfDepartment" class="text-danger"></span>
            </div>
            <div class="mb-3" style="width:350px">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control " />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group form-block-buttons-location">
                <a class="btn  btn-outline-secondary" style="width:90%" asp-controller="Department" asp-action="Index">Назад</a>
                <button type="submit" class="btn btn-primary" style="width:95%; text-align:center;">Зберегти зміни</button>
            </div>
        </div>
    </form><div></div>
</div>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }