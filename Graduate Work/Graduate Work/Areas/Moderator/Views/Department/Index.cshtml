@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-black text-primary"> Доступні відділення</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Department" asp-action="Add" class="btn btn-outline-dark"> &nbsp; Додати нове відділення</a>
        </div>
    </div>
    <br />
    <div class="row pb-3">
        @foreach(var item in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary text-dark">Номер відділення</p>
                                <p class="card-title"><b style="word-wrap:break-word;">@item.NumberOfDepartment</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="card-title h5 text-primary text-dark">Місто</p>
                                <p class="card-title"><b style="word-wrap:break-word;">@item.City</b></p>
                            </div>
                            <div style="display:flex;justify-content:center">
                                <a asp-controller="Department" asp-action="Update" asp-route-id="@item.DepartmentId"
                                class="btn btn-outline-secondary form-control">Редагувати</a>
                                &nbsp;<a asp-controller="Department" asp-action="Delete" asp-route-id="@item.DepartmentId"
                                class="btn btn-outline-danger form-control">Видалити</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>