@model Package
@{
    ViewData["Title"] = "Update";
}

<div class="form-block-location">
    <div></div>
    <form asp-action="Update" method="post" style="width:400px">
        <div class="card border-light mb-3 border p-3 mt-4">
            <div class="row pb-2 text-center">
                <h2 class="text-black text-primary">Редагування маршруту</h2>
            </div>
            <hr style="color:whitesmoke" />
            <input asp-for="PackageId" hidden />
            <input asp-for="SenderInfo" hidden />
            <input asp-for="ReciverInfo" hidden />
            <input asp-for="PackageType" hidden />
            <input asp-for="Time" hidden />
            <input asp-for="Cost" hidden />
            <div class="mb-3">
                <label asp-for="TTN">Назва завдання</label>
                <input asp-for="TTN" disabled class="form-control" />
                <span asp-validation-for="TTN" class="text-danger"></span>
            </div>
            <input asp-for="TTN" hidden />
            <div class="mb-3">
                <label asp-for="Status"></label>
                <select asp-for="Status" asp-items="ViewBag.StatusList" class="form-select">
                    @foreach (var item in ViewBag.StatusList)
                    {
                        @if (Model.Status == item.ToString())
                        {
                            <option selected disabled>@Model.Status</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group form-block-buttons-location">
                <a class="btn  btn-outline-secondary" style="width:90%" asp-controller="Package" asp-action="Index">Назад</a>
                <button type="submit" class="btn btn-primary" style="width:95%; text-align:center;">Зберегти зміни</button>
            </div>
        </div>
    </form><div></div>
</div>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }