@model LoginVM

@{
    ViewData["Title"] = "Login";
}
<div class="form-block-location">
    <div></div>
    <div class="table-secondary">
        <form asp-action="Login" style="width:400px">
            <div class="card border-light mb-3 border p-3 mt-4">
                <div class="row pb-2 text-center">
                    <h2 class="text-black text-primary">Вхід</h2>
                </div>
                <hr style="color:whitesmoke" />
                <div class="mb-3" style="width:350px">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3" style="width:350px">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control " />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group form-block-buttons-location">
                    <a class="btn  btn-outline-secondary" style="width:90%" asp-controller="Home" asp-action="Index">Назад</a>
                    <button type="submit" class="btn btn-primary" style="width:95%; text-align:center;"> Увійти</button>
                </div>
            </div>
        </form>
    </div><div></div>
</div>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
